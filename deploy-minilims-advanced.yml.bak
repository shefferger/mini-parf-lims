name: Deploy MiniLIMS (Advanced)

on:
  push:
    branches:
      - main
      - master
    paths:
      - 'minilims.html'
      - 'Dockerfile.minilims'
      - 'nginx.minilims.conf'
      - 'docker-compose.minilims.yml'
  workflow_dispatch:
    inputs:
      environment:
        description: 'Deployment environment'
        required: true
        default: 'production'
        type: choice
        options:
          - production
          - staging

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}/minilims

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=ref,event=branch
            type=sha,prefix={{branch}}-
            type=raw,value=latest,enable={{is_default_branch}}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment: ${{ github.event.inputs.environment || 'production' }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup SSH
        uses: webfactory/ssh-agent@v0.9.0
        with:
          ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}

      - name: Add server to known hosts
        run: |
          ssh-keyscan -H ${{ secrets.SSH_HOST }} >> ~/.ssh/known_hosts

      - name: Create remote directory
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << 'EOF'
            mkdir -p ~/minilims/{certs,logs,backup}
            cd ~/minilims
          EOF

      - name: Backup current deployment
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << 'EOF'
            cd ~/minilims
            if [ -f docker-compose.minilims.yml ]; then
              docker-compose -f docker-compose.minilims.yml down || true
              cp -r . ../minilims-backup-$(date +%Y%m%d-%H%M%S) || true
            fi
          EOF

      - name: Copy configuration files
        run: |
          scp minilims.html \
              Dockerfile.minilims \
              nginx.minilims.conf \
              docker-compose.minilims.yml \
              ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }}:~/minilims/

      - name: Update docker-compose with image
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << EOF
            cd ~/minilims
            cat > docker-compose.yml << 'COMPOSE_EOF'
          version: '3.8'
          
          services:
            minilims:
              image: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest
              container_name: minilims_nginx
              restart: unless-stopped
              ports:
                - "80:80"
                - "443:443"
              volumes:
                - ./certs:/etc/nginx/ssl:ro
                - ./minilims.html:/usr/share/nginx/html/index.html:ro
              networks:
                - minilims_network
          
          networks:
            minilims_network:
              driver: bridge
          COMPOSE_EOF
          EOF

      - name: Login to Container Registry on server
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << EOF
            echo "${{ secrets.GITHUB_TOKEN }}" | docker login ${{ env.REGISTRY }} -u ${{ github.actor }} --password-stdin
          EOF

      - name: Deploy application
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << 'EOF'
            set -e
            cd ~/minilims
            
            # Pull latest image
            docker-compose -f docker-compose.yml pull
            
            # Start containers
            docker-compose -f docker-compose.yml up -d
            
            # Wait for health check
            sleep 10
            
            # Verify deployment
            if ! docker-compose -f docker-compose.yml ps | grep -q "Up"; then
              echo "❌ Container failed to start"
              docker-compose -f docker-compose.yml logs
              exit 1
            fi
            
            # Cleanup
            docker image prune -f
            docker system prune -f --volumes
            
            echo "✅ Deployment successful!"
            docker-compose -f docker-compose.yml ps
          EOF

      - name: Health check
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << 'EOF'
            # Check if nginx is responding
            if curl -k -f https://localhost/ > /dev/null 2>&1; then
              echo "✅ Health check passed"
            else
              echo "⚠️ Health check failed, but deployment may still be in progress"
            fi
          EOF

      - name: Rollback on failure
        if: failure()
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} << 'EOF'
            cd ~/minilims
            BACKUP_DIR=$(ls -td ~/minilims-backup-* 2>/dev/null | head -1)
            if [ -n "$BACKUP_DIR" ]; then
              echo "Rolling back to previous version..."
              cp -r $BACKUP_DIR/* .
              docker-compose -f docker-compose.yml up -d
            fi
          EOF

